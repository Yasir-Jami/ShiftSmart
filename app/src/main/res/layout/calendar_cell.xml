<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendarCell"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_margin="0dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/slightly_darker_purple"
    app:strokeWidth="0.3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/cellDayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:text="@string/_1"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <!-- Indicators on the calendar  -->



    <View
        android:id="@+id/greenShiftIndicator"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/green_circle_indicator"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="12dp" />

    <View
        android:id="@+id/redShiftIndicator"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/red_circle_indicator"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="12dp" />





</com.google.android.material.card.MaterialCardView>

