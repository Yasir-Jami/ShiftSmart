<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddShiftsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

<!--        <TextView-->
<!--            android:id="@+id/page_info"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="1dp"-->
<!--            android:gravity="center"-->
<!--            android:text="Press the 'x' button next to an employee to remove them from a shift"-->
<!--            android:textColor="@color/black"-->
<!--            android:textStyle="italic" />-->

        <TextView
            android:id="@+id/selectedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Selected Date"
            android:textColor="@color/primary"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>

        <ImageButton
            android:id="@+id/addShifts_back_button"
            android:layout_width="43dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_button"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/fulldayShift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectedDate"
            android:layout_marginTop="25dp"
            android:text="Full Day Shift"
            android:textColor="@color/primary"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <Button
            android:id="@+id/fulldayShift1"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_below="@id/fulldayShift"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/helper"
            android:text="@string/add_employee"
            android:textAlignment="viewStart"/>

        <TextView
            android:id="@+id/Ftrained_opening1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_yellow"
            android:textStyle="bold"
            android:text="O"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_alignBaseline="@id/fulldayShift1"
            android:elevation="2dp"
            android:layout_marginStart="200dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/Ftrained_closing1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_purple"
            android:text="C"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_alignBaseline="@id/fulldayShift1"
            android:elevation="2dp"
            android:layout_marginStart="230dp"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/fulldayshift1_remove_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toEndOf="@id/fulldayShift1"
            android:layout_marginStart="15dp"
            android:layout_below="@id/fulldayShift"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:src="@drawable/x"
            android:visibility="visible"/>

        <Button
            android:id="@+id/fulldayShift2"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_below="@id/fulldayShift1"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/helper"
            android:text="@string/add_employee"
            android:textAlignment="viewStart"/>

        <TextView
            android:id="@+id/Ftrained_opening2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_yellow"
            android:textStyle="bold"
            android:text="O"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_alignBaseline="@id/fulldayShift2"
            android:elevation="2dp"
            android:layout_marginStart="200dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/Ftrained_closing2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_purple"
            android:text="C"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_alignBaseline="@id/fulldayShift2"
            android:elevation="2dp"
            android:layout_marginStart="230dp"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/fulldayshift2_remove_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toEndOf="@id/fulldayShift2"
            android:layout_marginStart="15dp"
            android:layout_below="@id/fulldayShift1"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:src="@drawable/x"
            android:visibility="visible"/>

<!--        <Button-->
<!--            android:id="@+id/saveShiftButton"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="25dp"-->
<!--            android:text="Save Shift"-->
<!--            android:textSize="18sp"-->
<!--            android:layout_marginBottom="30dp"-->
<!--            android:layout_below="@id/fulldayShift2"/>-->

        <Button
            android:id="@+id/save_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/fulldayShift2"
            android:layout_toEndOf="@id/delete_button"
            android:layout_marginTop="20dp"
            android:text="@string/save_shift"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/fulldayShift2"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/delete"
            android:text="Clear\nAll"
            android:textSize="18sp"/>

    </RelativeLayout>
</ScrollView>